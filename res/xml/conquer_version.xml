<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="conquer_version_screen"
    android:title="@string/conqueros_version_title"
    settings:keywords="@string/keywords_conqueros_version">

    <!-- ConquerOS logo -->
    <PreferenceScreen
        android:key="conquer_logo"
        android:enabled="false"
        android:layout="@layout/conquer_logo" />

    <!-- ConquerOS version -->
    <Preference
        android:key="conqueros_version"
        android:title="@string/conqueros_version_title"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.conqueros.ConquerOSVersionPreferenceController"/>

    <Preference
        android:key="caf_tag"
        android:title="@string/caf_tag_title"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.conqueros.CAFTagVersionPreferenceController"/>
	
    <Preference
        android:key="conqueros_build_number"
        android:title="@string/conqueros_build_number_title"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.conqueros.ConquerOSBuildNumberPreferenceController"/>

</PreferenceScreen>
